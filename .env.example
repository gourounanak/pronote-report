# Copy this file to .env and fill in your values.
# .env is git-ignored — never commit it.

# Full URL to your school's Pronote parent page
PRONOTE_URL=https://YOUR_SCHOOL.index-education.net/pronote/parent.html

# Your Pronote credentials
PRONOTE_USERNAME=your.username
PRONOTE_PASSWORD=your_password

# Gmail SMTP — use an App Password, not your regular password
# Generate one at: Google Account → Security → 2-Step Verification → App Passwords
GMAIL_ADDRESS=you@gmail.com
GMAIL_APP_PASSWORD=abcd efgh ijkl mnop

# Recipient(s) — comma-separated for multiple (e.g. you@gmail.com,spouse@gmail.com)
EMAIL_TO=you@gmail.com

# Report sections (optional) - set to "true" to include in reports
INCLUDE_HOMEWORKS=false
INCLUDE_TIMETABLE=false

# WhatsApp settings (optional) - requires Meta WhatsApp Business API
# Set to "true" to enable WhatsApp messaging
WHATSAPP_ENABLED=false

# Meta WhatsApp Business API credentials (required if WHATSAPP_ENABLED=true)
# Set up at https://developers.facebook.com/docs/whatsapp/business-management-api/get-started
META_ACCESS_TOKEN=your_access_token_here
META_PHONE_NUMBER_ID=your_phone_number_id_here

# Phone number with country code (required if WHATSAPP_ENABLED=true and not using group)
WHATSAPP_PHONE_NUMBER=+33123456789

# Multiple phone numbers for group messaging (optional - use instead of single phone number)
# Comma-separated list of phone numbers with country codes
# WHATSAPP_GROUP_NUMBERS=+33123456789,+33987654321,+44123456789
